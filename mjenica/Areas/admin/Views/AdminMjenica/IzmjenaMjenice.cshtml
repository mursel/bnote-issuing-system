@model mjenica.Areas.admin.Models.Mjenica

@{
    ViewBag.Title = "Izmjena mjenice";
    Layout = "~/Areas/admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Izmjena mjenice</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Mjenica</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MjenicaId)

        <div class="form-group">
            @Html.LabelFor(model => model.SifraKorisnika, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("SifraKorisnika", Model.SifraKorisnika, new { @readonly="readonly", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SifraKorisnika, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Datum", Model.Datum, new { @readonly = "readonly", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BrojMjenice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("BrojMjenice", Model.BrojMjenice, new { @readonly = "readonly", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BrojMjenice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JeValidna, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JeValidna, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JeValidna, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Izmjeni!" class="btn btn-default" />
            </div>
        </div>
    </div>
}
